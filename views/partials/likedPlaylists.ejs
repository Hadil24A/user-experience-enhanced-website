<article class="likedPlaylists">
  <% if (playlist.filter(playlistItem => favourites[playlistItem.id]).length > 0) { %>
    <ul class="playlist">
      <% playlist.filter(playlistItem => favourites[playlistItem.id]).forEach(playlistItem => { %>
        <li>
          <% if (playlist.image) { %>
            <picture>
                <source srcset="https://fdnd-agency.directus.app/assets/<%= playlist.image.id %>.avif" type="image.avif">
                <source srcset="https://fdnd-agency.directus.app/assets/<%= playlist.image.id %>.webp" type="image.webp">
                    <img src="https://fdnd-agency.directus.app/assets/<%= playlist.image.id %>" alt="playlist" height="<%= playlist.image.height %>" width="<%= playlist.image.width %>">
            </picture>
                    <% } else { %>
            <picture>
                <img src="./images/placeholder.png" alt="placeholder" width="144">
            </picture>
          <% } %>    
          
          <p class="playlistTitle"><%= playlist.title %></p>
          <a href="#" class="playPlaylist" type="button"><%- include('./playbuttonSVG') %> 
          <p>31 min. 55sec</p> </a>
  
          <form method="POST" action="/<%= playlist.id %>/like-or-unlike">
            <input type="hidden" name="action" value="like">
            <button class="like-button" title="like playlist" type="submit" name="action" value="like">                                        
              <%- include('./heartSVG') %>
            </button>
          </form>
        </li>
      <% }) %>
    </ul>

    <% } else { %>
      <p class="noPlaylist">You currently have no liked playlists.</p>
    <% } %> 
